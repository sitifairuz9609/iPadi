<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/biru"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Akaun Pengguna"
            android:fontFamily="@font/comfortaa"
            android:layout_marginTop="50dp"
            android:textSize="50dp"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"/>
        <EditText
            android:id="@+id/edtText_emailRegist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:backgroundTint="@color/white"
            android:textColor="@color/oren"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/comfortaa"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.40"/>

    </LinearLayout>


    <ImageView
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@drawable/images1" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputEmail"
        style="@style/parent"
        android:layout_marginTop="@dimen/loginViewsMargin">
        <EditText
            android:id="@+id/editText_Nama"
            style="@style/modifiedEditText"
            android:hint="Nama Penuh"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:fontFamily="@font/comfortaa"
            android:textColor="@color/teal_700"
            android:textSize="15dp"
            android:textStyle="bold"
            android:backgroundTint="@color/white"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputUmur"
        style="@style/parent"
        android:layout_marginTop="@dimen/loginViewsMargin">
        <EditText
            android:id="@+id/editText_Umur"
            style="@style/modifiedEditText"
            android:hint="Umur"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:fontFamily="@font/comfortaa"
            android:textColor="@color/teal_700"
            android:textSize="15dp"
            android:textStyle="bold"
            android:backgroundTint="@color/white"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status:"
        android:textSize="18dp"
        android:fontFamily="@font/comfortaa"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"/>

    <RadioButton
        android:id="@+id/bujang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bujang"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/comfortaa"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <RadioButton
        android:id="@+id/kahwin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Berkahwin"
        android:fontFamily="@font/comfortaa"
        android:textColor="@color/black"
        android:textSize="15dp" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputTelefon"
        style="@style/parent"
        android:layout_marginTop="@dimen/loginViewsMargin">
        <EditText
            android:id="@+id/editTelefon"
            style="@style/modifiedEditText"
            android:hint="No. Telefon"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:fontFamily="@font/comfortaa"
            android:textColor="@color/teal_700"
            android:textSize="15dp"
            android:textStyle="bold"
            android:backgroundTint="@color/white"/>
    </com.google.android.material.textfield.TextInputLayout>


    <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
        android:id="@+id/btn_simpan"
        style="@style/loginButton"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/comfortaa"
        android:layout_marginTop="@dimen/loginViewsMargin"
        android:text="Simpan"
        app:initialCornerAngle="27dp"
        app:spinning_bar_color="#FFF"
        app:spinning_bar_padding="6dp"
        app:spinning_bar_width="4dp"
        tools:ignore="MissingConstraints"
        android:layout_below="@+id/edtText_passwordconfirmRegist"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.80"/>

    <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
        android:id="@+id/btn_teruskan"
        style="@style/loginButton"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/comfortaa"
        android:layout_marginTop="@dimen/loginViewsMargin"
        android:text="Teruskan"
        app:initialCornerAngle="27dp"
        app:spinning_bar_color="#FFF"
        app:spinning_bar_padding="6dp"
        app:spinning_bar_width="4dp"
        tools:ignore="MissingConstraints"
        android:layout_below="@+id/edtText_passwordconfirmRegist"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.80"/>
</LinearLayout>