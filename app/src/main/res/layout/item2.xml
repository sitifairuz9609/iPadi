<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="380dp"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:padding="2dp"
            android:src="@drawable/expenses" />

        <TextView
            android:id="@+id/perbelanjaanbelanja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView"
            android:layout_toRightOf="@+id/imageView"
            android:fontFamily="@font/comfortaa"
            android:text="Operasi"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/jenisaktivitibelanja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/perbelanjaanbelanja"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@+id/imageView"
            android:layout_toRightOf="@+id/imageView"
            android:fontFamily="@font/comfortaa"
            android:text="Penyediaan ladang padi"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/aktivitibelanja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/jenisaktivitibelanja"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@+id/imageView"
            android:layout_toRightOf="@+id/imageView"
            android:fontFamily="@font/comfortaa"
            android:text="Pembakaran jerami padi"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itembelanja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/aktivitibelanja"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@+id/imageView"
            android:layout_toRightOf="@+id/imageView"
            android:fontFamily="@font/comfortaa"
            android:text="Baja"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/kuantitibelanja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itembelanja"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@+id/imageView"
            android:layout_toRightOf="@+id/imageView"
            android:fontFamily="@font/comfortaa"
            android:text="2"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ukuranbelanja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itembelanja"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@+id/kuantitibelanja"
            android:layout_toRightOf="@+id/imageView"
            android:fontFamily="@font/comfortaa"
            android:text="tan"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/hargabelanja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/kuantitibelanja"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@+id/imageView"
            android:layout_toRightOf="@+id/imageView"
            android:fontFamily="@font/comfortaa"
            android:text="RM 30.00"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/delete"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/perbelanjaanbelanja"
            android:backgroundTint="@color/transparent"
            android:src="@drawable/ic_baseline_close_24" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>